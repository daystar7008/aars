<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item"
    android:padding="@dimen/padding_small" >

    <ImageView
        android:id="@+id/imgFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/tests"
        android:background="@android:drawable/btn_star_big_off" />

    <TextView
        android:id="@+id/tvDeptName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgFav"
        android:singleLine="true"
        android:textColor="@color/font_orange"
        android:textIsSelectable="false"
        android:textSize="@dimen/font_medium" />

    <TextView
        android:id="@+id/tvDeptDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgFav"
        android:layout_below="@+id/tvDeptName"
        android:layout_toLeftOf="@+id/tvTestCount"
        android:singleLine="true"
        android:textColor="@color/font"
        android:textIsSelectable="false"
        android:textSize="@dimen/font_small"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tvTestCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tvDeptDesc"
        android:background="@drawable/count_item"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/font_blue"
        android:textIsSelectable="false"
        android:textSize="@dimen/font_large" />

</RelativeLayout>
